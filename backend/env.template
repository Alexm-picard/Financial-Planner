# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Server Configuration
PORT=5001
HOST=0.0.0.0
NODE_ENV=production

# Frontend URL (for CORS)
# In production, this should be your domain
FRONTEND_URL=https://financial-planner.alexpicard.info

# MongoDB Connection
# Format: mongodb://[username:password@]host[:port][/database][?options]
MONGO_URI=mongodb://127.0.0.1:27017/harmonyhub

# Auth0 Configuration (if using Auth0 Management API)
# These are for backend Auth0 operations (not frontend)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_M2M_CLIENT_ID=your_machine_to_machine_client_id
AUTH0_M2M_CLIENT_SECRET=your_machine_to_machine_client_secret
AUTH0_AUDIENCE=https://your-api-audience

# Optional: Logging
LOG_LEVEL=info

